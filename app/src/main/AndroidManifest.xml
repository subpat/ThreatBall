<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="developer.subhadeep.threatball">

    <application
        android:name=".ThreatBallApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThreatBall">
        <activity
            android:name=".view.Activity4_Help"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.Activity3_GamePanel"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.Activity2_Loading"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.Activity1_MainMenu"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>